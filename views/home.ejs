<%- layout('./layout/boilerplate.ejs') %>

<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          Organize Your <span class="highlight">Development</span> Resources
        </h1>
        <p class="hero-description">
          Build your personal knowledge base. Save, categorize, and access your favorite 
          development links, tools, and references with smart tagging and organization.
        </p>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">1000+</span>
            <span class="stat-label">Resources</span>
          </div>
          <div class="stat">
            <span class="stat-number">50+</span>
            <span class="stat-label">Categories</span>
          </div>
          <div class="stat">
            <span class="stat-number">24/7</span>
            <span class="stat-label">Access</span>
          </div>
        </div>
        <div class="hero-cta">
          <a href="/bookmark/new" class="btn btn-primary btn-lg">
            <i class="fas fa-plus"></i>
            Start Collecting
          </a>
          <a href="/bookmark" class="btn btn-outline-light btn-lg">
            <i class="fas fa-eye"></i>
            Browse Bookmarks
          </a>
        </div>
      </div>
      <div class="hero-visual">
        <div class="bookmark-showcase">
          <div class="bookmark-card bookmark-card-1">
            <div class="bookmark-header">
              <i class="fas fa-code"></i>
              <span class="bookmark-category">Frontend</span>
            </div>
            <h4>React Documentation</h4>
            <p>Official React docs and tutorials</p>
            <div class="bookmark-tags">
              <span class="tag">#react</span>
              <span class="tag">#javascript</span>
              <span class="tag">#frontend</span>
            </div>
          </div>
          <div class="bookmark-card bookmark-card-2">
            <div class="bookmark-header">
              <i class="fas fa-server"></i>
              <span class="bookmark-category">Backend</span>
            </div>
            <h4>Node.js API Guide</h4>
            <p>Backend development resources</p>
            <div class="bookmark-tags">
              <span class="tag">#nodejs</span>
              <span class="tag">#api</span>
              <span class="tag">#backend</span>
            </div>
          </div>
          <div class="bookmark-card bookmark-card-3">
            <div class="bookmark-header">
              <i class="fas fa-palette"></i>
              <span class="bookmark-category">Design</span>
            </div>
            <h4>CSS Grid Layout</h4>
            <p>Modern CSS techniques</p>
            <div class="bookmark-tags">
              <span class="tag">#css</span>
              <span class="tag">#layout</span>
              <span class="tag">#design</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features">
  <div class="container">
    <div class="section-header">
      <h2>Why Choose Bookmark Vault?</h2>
      <p>Everything you need to organize your development resources</p>
    </div>
    <div class="features-grid">
      <div class="feature-item">
        <div class="feature-icon">
          <i class="fas fa-tags"></i>
        </div>
        <h3>Collections</h3>
        <p>Create curated groups of bookmarks to keep related resources neatly organized</p>
      </div>
      <div class="feature-item">
        <div class="feature-icon">
          <i class="fas fa-search"></i>
        </div>
        <h3>Quick Search</h3>
        <p>Find resources instantly with powerful search and filtering</p>
      </div>
      <div class="feature-item">
        <div class="feature-icon">
          <i class="fas fa-mobile-alt"></i>
        </div>
        <h3>Mobile Ready</h3>
        <p>Access your bookmarks anywhere with responsive design</p>
      </div>
      <div class="feature-item">
        <div class="feature-icon">
          <i class="fas fa-shield-alt"></i>
        </div>
        <h3>Secure & Private</h3>
        <p>Your data stays private and secure with encrypted storage</p>
      </div>
      <div class="feature-item">
        <div class="feature-icon">
          <i class="fas fa-sync"></i>
        </div>
        <h3>Always Synced</h3>
        <p>Your bookmarks sync across all your devices automatically</p>
      </div>
      <div class="feature-item">
        <div class="feature-icon">
          <i class="fas fa-bolt"></i>
        </div>
        <h3>Lightning Fast</h3>
        <p>Optimized for speed with instant loading and smooth interactions</p>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<% if(!currentUser){ %>
  <section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2>Ready to Organize Your Development Resources?</h2>
      <p>Join thousands of developers who trust Bookmark Vault to manage their knowledge base</p>
      <div class="cta-buttons">
        <a href="/signup" class="btn btn-primary btn-lg">
          <i class="fas fa-rocket"></i>
          Get Started Free
        </a>
      </div>
    </div>
  </div>
</section>
  <% } %>