<%- layout('./layout/boilerplate.ejs') %>

<div class="container mt-4">
  <h3 class="text-center mb-4">Your Collection's</h3>
  <div class="d-flex justify-content-center">
    <a href="/collections/new" class="btn btn-primary mb-4">Add New Collection</a>
  </div>

    <% if(collections.length === 0) { %>
    <div class="text-center mt-5">
      <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
<h4 class="text-muted">No collections yet</h4>
<p class="text-muted">Start by creating a collection to group and organize your bookmarks.</p>
    </div>
    <% }else{ %>
    <% for(let collection of collections){ %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
        <a href="/collections/<%= collection._id %>" class="text-decoration-none text-dark fw-bold">
            <%= collection.name %>
        </a>
        <% if (collection.description) { %>
            <p class="mb-0 text-muted small"><%= collection.description %></p>
        <% } else { %>
            <p class="mb-0 text-muted small fst-italic">No description provided</p>
        <% } %>
        </div>
    </li>
<% } %>
<% } %>
</div>